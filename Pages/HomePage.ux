<Page ux:Class="HomePage">
	<Router ux:Dependency="router" />

	<JavaScript File="HomePage.js" />

    <Activated>
        <Callback Handler="{getMovies}" />
    </Activated>

	<ScrollView>
		<StackPanel ItemSpacing="20">
			<Button Text="Register" Clicked="{goToRegister}" />
			<Button Text="Logout" Clicked="{logout}" />
			<Button Text="Loading" Clicked="{goToLoading}" />

			<WhileNotEmpty Items="{hikes}">
				<Each Items="{hikes}">
					<Button Text="{name}" Clicked="{goToHike}" />
				</Each>
			</WhileNotEmpty>

			<WhileNotEmpty Items="{movies}">
				<Each Items="{movies}">
					<Button Text="{title}" Clicked="{goToMovieDetails}" />
				</Each>
			</WhileNotEmpty>
			
			<WhileEmpty Items="{movies}">
				<Panel Height="100">
					<LoadingPanel ux:Name="LoadingPanel" />
				</Panel>
			</WhileEmpty>

			<WhileNotEmpty Items="{token}">
				<Text>User Token:</Text>
				<Text Value="{token}" />
			</WhileNotEmpty>

		</StackPanel>
	</ScrollView>
</Page>